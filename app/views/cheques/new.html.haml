.container.polkadotjs#cheques-new
  .row
    .col-md-9.mx-auto.mb-5
      .card
        .card-body
          %h1 New cheque
          %form.needs-validation{ name: 'chequeNewForm', novalidate: 'novalidate' }
            .mb-3
              %label.form-label.required{ for: 'cheque-to' } To
              %input.form-control#cheque-to{ name: 'to', required: 'required', type: 'text' }
              .invalid-feedback
                Invalid address.
            .mb-3
              %label.form-label.required{ for: 'cheque-crypto' } Crypto
              %select.form-select#cheque-crypto{ name: 'crypto' }
            .mb-3
              %label.form-label{ for: 'cheque-amount' } Amount
              %input.form-control#cheque-amount{ name: 'amount', type: 'text' }
            .d-flex.mt-3
              %a.btn.btn-light.me-3{ href: '/' } Cancel
              %button.btn.btn-primary{ type: 'submit' }
                %span.d-none.loading
                  %em.spinner-grow.spinner-grow-sm{ 'aria-hidden' => 'true', role: 'status' }
                  %em.loading-status Loading...
                %span.ready
                  Create
        .card-footer
          .card-text
            %small.text-muted
              %ul
                %li
                  Fee:
                  %span#fee-amount
                    %em.loading-status Loading...
